{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row mt-5 justify-content-center">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading blank">S'incrire : </div><br>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                            <label for="email" class="blank">Email</label>
                            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}" required>
                            {% if errors.email %}
                                <span class="help-block red">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.name ? ' has-error' : '' }}">
                            <label for="name" class="blank">Nom</label>
                            <input type="text" name="name" id="name" class="form-control" value="{{ old.name }}" required>
                            {% if errors.name %}
                                <span class="help-block red">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password" class="blank">Mot de passe</label>
                            <input type="password" name="password" id="password" class="form-control" required>
                            {% if errors.password %}
                                <span class="help-block red">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">S'inscrire</button>

                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
